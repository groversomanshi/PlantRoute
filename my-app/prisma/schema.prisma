// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js (Prisma adapter) — required for database sessions
model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  preference    Preference?
}

// User preferences from onboarding/profile form — for LLM training and personalization
model Preference {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Travel preference sliders (0–1)
  tripPace                Float    @default(0.5)
  crowdComfort            Float    @default(0.5)
  morningTolerance        Float    @default(0.5)
  lateNightTolerance      Float    @default(0.5)
  walkingEffort           Float    @default(0.5)
  budgetLevel             Float    @default(0.5)
  planningVsSpontaneity   Float    @default(0.5)
  noiseSensitivity       Float    @default(0.5)
  // Weather dislikes
  dislikeHeat             Boolean  @default(false)
  dislikeCold             Boolean  @default(false)
  dislikeRain             Boolean  @default(false)
  // Vibe and notes
  travelVibe              String   @default("Chill")
  additionalNotes         String?
  completed               Boolean  @default(false)
  // Full snapshot for LLM training (JSON: interests, raw_text, etc.)
  preferencesSnapshot     Json?
  updatedAt               DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}
